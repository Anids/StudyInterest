<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorLightSlateBlue">
        <TextView
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资料汇总"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_grade"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="70dp"
            android:layout_marginStart="10dp"
            android:layout_height="45dp"
            android:text="年级:"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
        <Spinner
            android:id="@+id/spinner_grade_01"
            android:layout_toRightOf="@+id/tv_grade"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:descendantFocusability="blocksDescendants"
            android:entries="@array/grades"
            tools:ignore="RtlHardcoded" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_major"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="70dp"
            android:layout_marginStart="10dp"
            android:layout_height="45dp"
            android:text="专业:"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
        <Spinner
            android:id="@+id/spinner_major_01"
            android:layout_toRightOf="@+id/tv_major"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:descendantFocusability="blocksDescendants"
            android:entries="@array/majors"
            tools:ignore="RtlHardcoded" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_course"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="90dp"
            android:layout_marginStart="10dp"
            android:layout_height="45dp"
            android:text="课程名:"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            tools:ignore="HardcodedText,RtlHardcoded,SpUsage" />
        <Spinner
            android:id="@+id/spinner_course_01"
            android:layout_toRightOf="@+id/tv_course"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:descendantFocusability="blocksDescendants"
            android:entries="@array/courses"
            tools:ignore="RtlHardcoded" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>
    <Button
        android:id="@+id/bata_button"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_blue_selector"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:text="确   定"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textAlignment="center"
        tools:ignore="HardcodedText,SpUsage"/>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        tools:ignore="RtlHardcoded" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/linearlayout_listliew_data"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lv_03">
        </ListView>
    </LinearLayout>

</LinearLayout>